{
  "mcpServers": {
    "ai-browser-mcp": {
      "command": "node",
      "args": ["dist/simple-server.js"],
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "info"
      },
      "disabled": false,
      "autoApprove": [
        "browser.newContext",
        "browser.goto",
        "browser.screenshot",
        "browser.click",
        "browser.type",
        "browser.eval"
      ]
    }
  }
}