{
  "name": "ai-browser-mcp",
  "displayName": "AI Browser MCP",
  "description": "VS Code extension for AI Browser MCP server integration",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:aiBrowserMcp.startServer",
    "onCommand:aiBrowserMcp.stopServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiBrowserMcp.startServer",
        "title": "Start AI Browser MCP Server"
      },
      {
        "command": "aiBrowserMcp.stopServer",
        "title": "Stop AI Browser MCP Server"
      },
      {
        "command": "aiBrowserMcp.showScreenshot",
        "title": "Show Browser Screenshot"
      },
      {
        "command": "aiBrowserMcp.showLogs",
        "title": "Show Browser Logs"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "aiBrowserMcp",
          "name": "AI Browser MCP",
          "when": "aiBrowserMcp.serverRunning"
        }
      ]
    },
    "configuration": {
      "title": "AI Browser MCP",
      "properties": {
        "aiBrowserMcp.serverPort": {
          "type": "number",
          "default": 3000,
          "description": "Port for the MCP server"
        },
        "aiBrowserMcp.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start the server when VS Code opens"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/ws": "^8.5.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "ws": "^8.14.0"
  }
}